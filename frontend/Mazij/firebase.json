{
    "database": {
      "rules": "database.rules.json"
    },
    "firestore": {
      "rules": "firestore.rules",
      "indexes": "firestore.indexes.json"
    },
    
    "hosting": {
      "public": "build/web",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ]
    },
    "storage": {
      "rules": "storage.rules"
    },
    "emulators": {
      "firestore": {
        "port": 8080
      },
      "database": {
        "port": 9000
      },
      "hosting": {
        "port": 5000
      },
      "ui": {
        "enabled": true
      }
    },
    "remoteconfig": {
      "template": "remoteconfig.template.json"
    }
  }